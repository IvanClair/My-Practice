<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_camera_x"
    app:startDestination="@id/cameraPermissionFragment">

    <fragment
        android:id="@+id/cameraPermissionFragment"
        android:name="ivan.personal.feature_camera_x.view.CameraPermissionFragment"
        android:label="CameraPermissionFragment"
        tools:layout="@layout/fragment_camera_permission">

        <action
            android:id="@+id/to_camera_preview"
            app:destination="@id/cameraPreviewFragment" />
    </fragment>

    <fragment
        android:id="@+id/cameraPreviewFragment"
        android:name="ivan.personal.feature_camera_x.view.CameraPreviewFragment"
        android:label="CameraPreviewFragment"
        tools:layout="@layout/fragment_camera_preview" />
</navigation>